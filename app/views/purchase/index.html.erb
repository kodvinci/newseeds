<h1 style="color:green;text-align:center;">Lend money through Seeds</h1>

<%= content_tag('div', "There was an error processing your payment: #{@paypal_error}", :class => 'error') if @paypal_error %>

<% if @cc.errors.any? %>
  <div class="error">
    Errors encountered with your credit card information:
    <ul>
      <%= raw @cc.errors.full_messages.map {|m| content_tag('li', m) } %>
    </ul>
  </div>
<% end %>

<h2 style="color:green;text-align:center;"> Pay by credit card </h2>

<%= form_for @cc, :as => :creditcard, :url => { :action => 'credit' } do |f| %>
  <label>Card Number </label>
  <%= f.text_field :number %>
  <label>Card Type</label> <br />
  <%= f.select :type, [["Visa", "visa"], ["MasterCard", "master"], ["Discover", "discover"], ["American Express", "american_express"]] %> <br />
  <label>Expiration </label>
  <%= f.select :month, (1 .. 12) %> <%= f.select :year, (Time.now.year .. 10.years.from_now.year) %>
  <label>CVV</label>
  <%= f.text_field :verification_value, :size => 4 %>

  <label>Name on Card</label> <br />
  <label>First Name<%= f.text_field :first_name %> </label>
  <label>Last Name<%= f.text_field :last_name %> </label>
  
  <label>Billing Address</label> <br />
  <label>Name</label>
  <%= text_field_tag 'billing_address[name]' %> <br />
  <label>Street</label>
  <%= text_field_tag 'billing_address[address1]' %> 
  <%= text_field_tag 'billing_address[address2]' %> <br />
  <label>City</label> 
  <%= text_field_tag 'billing_address[city]' %> <br />
  <label>State</label>
  <%= text_field_tag 'billing_address[state]' %> <br />
  <label>Country</label>
  <%= text_field_tag 'billing_address[country]' %> <br />
  <label>Zip</label>
  <%= text_field_tag 'billing_address[zip]' %> <br />
  <label>Phone</label>
  <%= text_field_tag 'billing_address[phone]' %> 
  <br/>
  
  <%= submit_tag 'Lend Money' %>
<% end %>

<h3 style="color:green;text-align:center;"> OR by PayPal </h3>

<%= form_tag :action => 'express' do %>
	<%= image_submit_tag("paypal.jpg") %>
<% end %>



